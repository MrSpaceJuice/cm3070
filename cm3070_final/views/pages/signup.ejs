<%- include('../partials/head') %>

<div class="container">
<section class="prompt">
    <h3>Bodylift</h3>
    <h1>Sign Up</h1>

    <form action="signup/post" method="post">
        <section>
            <label for="username">Username</label>
            <input id="username" name="username" type="text" required autofocus>
        </section>
        <section>
            <label for="current-password">Password</label>
            <input id="current-password" name="password" type="password" required>
        </section>
        <section>
            <label for="first-name">First Name</label>
            <input id="first-name" name="firstName" type="text" required>
        </section>
        <section>
            <label for="last-name">Last Name</label>
            <input id="last-name" name="lastName" type="text" required>
        </section>
        <section>
            <label for="email">Email Address</label>
            <input id="email" name="email" type="text" required>
        </section>
        <button type="submit">Sign Up</button>
    </form>

    <hr>
    <p class="help">Already have an account? <a href="/auth">Login</a></p>
</section>
</div>
<%- include('../partials/footer') %>